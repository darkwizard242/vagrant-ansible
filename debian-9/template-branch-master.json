{
   "variables":{
      "cloud_token":"{{ env `VAGRANT_CLOUD_TOKEN` }}",
      "version":"1.0.{{timestamp}}",
      "release_description":"Latest kernel and package updates."
   },
   "builders":[
      {
         "type":"virtualbox-iso",
         "boot_command":[
            "<esc><wait>",
            "install <wait>",
            "auto <wait>",
            "console-setup/ask_detect=false <wait>",
            "debconf/frontend=noninteractive <wait>",
            "debian-installer=en_US <wait>",
            "fb=false <wait>",
            "kbd-chooser/method=us <wait>",
            "keyboard-configuration/xkb-keymap=us <wait>",
            "locale=en_US <wait>",
            "netcfg/get_domain=debian9.com <wait>",
            "netcfg/get_hostname=ansible <wait>",
            "grub-installer/bootdev=/dev/sda <wait>",
            " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
            "<enter><wait>"
         ],
         "boot_wait":"10s",
         "disk_size":40960,
         "guest_os_type":"Debian_64",
         "headless":true,
         "http_directory":"http",
         "iso_urls":[
            "https://cdimage.debian.org/cdimage/archive/9.12.0/amd64/iso-cd/debian-9.12.0-amd64-netinst.iso"
         ],
         "iso_checksum":"sha256:3c47f64693435b0b42b6ef59624edbffa7c4004317d9f9a3f04ecb6a4e30f191",
         "ssh_username":"vagrant",
         "ssh_password":"password",
         "ssh_port":22,
         "ssh_wait_timeout":"2000s",
         "shutdown_command":"echo 'vagrant'|sudo -S shutdown -P now",
         "guest_additions_path":"VBoxGuestAdditions_{{.Version}}.iso",
         "virtualbox_version_file":".vbox_version",
         "vm_name":"ansibledebian9",
         "vboxmanage":[
            [
               "modifyvm",
               "{{.Name}}",
               "--memory",
               "2048"
            ],
            [
               "modifyvm",
               "{{.Name}}",
               "--cpus",
               "1"
            ]
         ]
      }
   ],
   "provisioners":[
      {
         "type":"file",
         "source":"mods",
         "destination":"/home/vagrant/"
      },
      {
         "type":"shell",
         "execute_command":"echo 'password' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
         "inline":[
            "sudo apt-get update",
            "sudo apt-get upgrade -y",
            "/home/vagrant/mods/01-init.sh",
            "/home/vagrant/mods/02-vagrant_init.sh",
            "/home/vagrant/mods/03-ansible.sh install",
            "mods/cleanup.sh"
         ]
      }
   ],
   "post-processors":[
      [
         {
            "type":"vagrant",
            "compression_level":"9",
            "output":"output/ansibledebian9.box"
         },
         {
            "type":"vagrant-cloud",
            "box_tag":"darkwizard242/ansibledebian9",
            "access_token":"{{user `cloud_token`}}",
            "version":"{{user `version`}}",
            "version_description":"{{user `release_description`}}"
         }
      ]
   ]
}
