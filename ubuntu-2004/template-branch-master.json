{
   "variables":{
      "cloud_token":"{{ env `VAGRANT_CLOUD_TOKEN` }}",
      "version":"1.0.{{timestamp}}",
      "release_description":"Latest kernel and package updates."
   },
   "builders":[
      {
         "type":"virtualbox-iso",
         "boot_command":[
            "<enter><enter><f6><esc><wait> ",
            "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
            "<enter>"
         ],
         "boot_wait":"5s",
         "disk_size":40960,
         "guest_os_type":"Ubuntu_64",
         "headless":true,
         "http_directory":"http",
         "iso_urls":[
            "https://releases.ubuntu.com/20.04/ubuntu-20.04.2-live-server-amd64.iso"
         ],
         "iso_checksum":"sha256:d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423",
         "ssh_username":"vagrant",
         "ssh_password":"vagrant",
         "ssh_port":22,
         "ssh_wait_timeout":"3000s",
         "ssh_handshake_attempts": "200",
         "memory": 2048,
         "shutdown_command":"echo 'vagrant'|sudo -S shutdown -P now",
         "guest_additions_path":"VBoxGuestAdditions_{{.Version}}.iso",
         "virtualbox_version_file":".vbox_version",
         "vm_name":"ansibleubuntu2004",
         "vboxmanage":[
            [
               "modifyvm",
               "{{.Name}}",
               "--memory",
               "2560"
            ],
            [
               "modifyvm",
               "{{.Name}}",
               "--cpus",
               "2"
            ]
         ]
      }
   ],
   "provisioners":[
      {
         "type":"file",
         "source":"mods",
         "destination":"/home/vagrant/"
      },
      {
         "type":"shell",
         "execute_command":"echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
         "inline":[
            "sudo apt-get update",
            "sudo apt-get upgrade -y",
            "/home/vagrant/mods/01-init.sh",
            "/home/vagrant/mods/02-vagrant_init.sh",
            "/home/vagrant/mods/03-ansible.sh install",
            "/home/vagrant/mods/cleanup.sh"
         ]
      }
   ],
   "post-processors":[
      [
         {
            "type":"vagrant",
            "compression_level":"9",
            "output":"output/ansibleubuntu2004.box"
         },
         {
            "type":"vagrant-cloud",
            "box_tag":"darkwizard242/ansibleubuntu2004",
            "access_token":"{{user `cloud_token`}}",
            "version":"{{user `version`}}",
            "version_description":"{{user `release_description`}}"
         }
      ]
   ]
}
